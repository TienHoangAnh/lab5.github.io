<div class="container text-center">
   <form action="/mobile/view" method="post" class="card bg-light p-3">
      <h1 class="text-danger text-uppercase">Add New Mobile</h1>
      <div class="form-group mt-3">
         <label for="brand" class="h5 text-success">Brand</label>
         <select class="form-select" name="brand" id="brand" required>
            <option value="">Select a brand</option>
            <option value="iPhone">iPhone</option>
            <option value="Samsung">Samsung</option>
            <option value="Oppo">Oppo</option>
            <option value="Xiaomi">Xiaomi</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label for="model" class="h5 text-primary">Model</label>
         <input class="form-control" type="text" name="model" id="model" placeholder="Enter mobile's model" required>
      </div>
      <div class="form-group mt-3">
         <label for="price" class="h5 text-warning">Price</label>
         <input class="form-control" type="text" name="price" id="price" placeholder="Enter mobile's price" required>
      </div>
      <div class="form-group mt-3">
         <label for="quantity" class="h5 text-danger">Quantity</label>
         <input class="form-control" type="number" name="quantity" id="quantity" placeholder="Enter mobile's quantity" min="1" max="100" required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text-info">Type</label><br>
         <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="normal" value="normal" required>
            <label class="form-check-label" for="normal">Normal</label>
         </div>
         <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="fold" value="fold" required>
            <label class="form-check-label" for="fold">Fold</label>
         </div>
      </div>
      <div class="form-group mt-3">
         <label for="image" class="h5 text-secondary">Image URL</label>
         <input class="form-control" type="url" name="image" id="image" required>
      </div>
      <div class="form-group mt-3">
         <button class="btn btn-primary" type="submit">Add</button>
         <button class="btn btn-warning" type="reset">Clear</button>
      </div>
   </form>
</div>
